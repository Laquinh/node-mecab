{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":timezone(Asia/Tokyo)",
    ":automergePatch",
    ":automergeBranch",
    ":semanticCommitTypeAll(build)",
    ":prNotPending",
    ":noUnscheduledUpdates",
    ":label(dependencies)",
    "group:allNonMajor",
    "schedule:weekdays"
  ],
  "rangeStrategy": "bump"
}
